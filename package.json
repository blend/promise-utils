{
  "name": "blend-promise-utils",
  "version": "1.16.1",
  "description": "Lodash-like utilities for dealing with promises",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "pretty": "prettier --list-different '{src,test}/**/**/*.ts'",
    "lintSrc": "tslint --project tsconfig.json --config tslint.js 'src/**/*.ts'",
    "lintTest": "tslint --project tsconfig.json --config tslint.test.js 'test/**/*.ts'",
    "lint": "npm run lintSrc && npm run lintTest",
    "lintFix": "npm run lintSrc --fix && npm run lintTest --fix",
    "testCode": "nyc ava",
    "test": "tsc && npm run testCode && npm run lint && ./bin/assert_no_file_modifications.sh",
    "start": "grunt"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blend/promise-utils.git"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100
  },
  "ava": {
    "files": [
      "dist/test/**/*.test.js"
    ],
    "sources": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "concurrency": 5,
    "verbose": true,
    "timeout": "10000",
    "failFast": false,
    "powerAssert": true
  },
  "nyc": {
    "reporter": [
      "html",
      "json",
      "lcov",
      "text"
    ],
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100,
    "statements": 100,
    "exclude": [
      "dist/test/**/*.js"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/lodash": "4.14.121",
    "@types/sinon": "7.0.6",
    "ava": "1.2.1",
    "coveralls": "3.0.3",
    "grunt": "1.0.3",
    "grunt-ava": "0.19.0",
    "grunt-contrib-watch": "1.1.0",
    "grunt-force-task": "2.0.0",
    "grunt-prettier": "1.1.1",
    "grunt-ts": "6.0.0-beta.22",
    "grunt-tslint": "5.0.2",
    "nyc": "13.3.0",
    "sinon": "7.2.4",
    "tslint": "5.12.1",
    "typedoc": "0.14.2",
    "typescript": "3.3.3"
  },
  "dependencies": {
    "lodash": "4.17.11",
    "moment": "2.24.0"
  }
}
